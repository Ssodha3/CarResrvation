@model CarReservationSystem.Models.Reservation

@{
    ViewBag.Title = "Reservation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Reservation for @ViewBag.CarModel</h2>

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.CarModel)
                <div class="form-group">
                    @Html.LabelFor(model => model.Username)
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Enter username" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ReservationDateTime)
                    @Html.TextBoxFor(model => model.ReservationDateTime, new { @class = "form-control", type = "datetime-local" })
                </div>
                <div class="text-center">
                    <div style="margin-top: 10px;"></div> <!-- Space added here -->
                    <button type="submit" class="btn btn-primary">Reserve</button>
                </div>
            }
        </div>
    </div>
</div>
